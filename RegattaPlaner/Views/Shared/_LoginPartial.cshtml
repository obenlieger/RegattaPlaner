@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav ml-auto">
            <li class="nav-item"><a asp-area="" asp-controller="Regatta" asp-action="Index" class="nav-link">Regatta</a></li>
            <li class="nav-item"><a asp-area="" asp-controller="ReportedRaces" asp-action="Index" class="nav-link">Rennen</a></li>
            <li class="nav-item">
                <button type="submit" class="btn btn-secondary my-2 my-sm-0">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}
    
